# ============================
# Mimoso Lanches - Configuração Raiz
# ============================

# Arquivo padrão da raiz
DirectoryIndex index.php

<IfModule mod_rewrite.c>
RewriteEngine On

# Não reescreve arquivos ou diretórios reais
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# (Opcional) Forçar HTTPS - descomente se seu certificado SSL já estiver ativo
# RewriteCond %{HTTPS} !=on
# RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# (Opcional) Redirecionar www → sem www
# RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
# RewriteRule ^ https://%1%{REQUEST_URI} [L,R=301]
</IfModule>
